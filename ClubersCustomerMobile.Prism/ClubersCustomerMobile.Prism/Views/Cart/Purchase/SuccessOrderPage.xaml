<?xml version="1.0" encoding="utf-8" ?>
<popups:PopupPage
    x:Class="ClubersCustomerMobile.Prism.Views.SuccessOrderPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animations="clr-namespace:Rg.Plugins.Popup.Animations;assembly=Rg.Plugins.Popup"
    xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    xmlns:popups="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
    xmlns:prism="http://prismlibrary.com"
    ios:Page.UseSafeArea="true"
    prism:ViewModelLocator.AutowireViewModel="True"
    CloseWhenBackgroundIsClicked="False"
    NavigationPage.HasNavigationBar="False"
    Visual="Material">
    <popups:PopupPage.Animation>
        <animations:ScaleAnimation
            DurationIn="400"
            DurationOut="300"
            EasingIn="SinOut"
            EasingOut="SinIn"
            HasBackgroundAnimation="True"
            PositionIn="Center"
            PositionOut="Center"
            ScaleIn="1.2"
            ScaleOut="0.8" />
    </popups:PopupPage.Animation>
    <StackLayout
        Padding="40"
        BackgroundColor="WhiteSmoke"
        HorizontalOptions="Center"
        VerticalOptions="Center">
        <ffimageloading:CachedImage
            Margin="5"
            Aspect="AspectFit"
            CacheDuration="50"
            ErrorPlaceholder="https://clubersblob.blob.core.windows.net/icons/ErrorPlaceholder.png"
            HeightRequest="90"
            LoadingPlaceholder="https://clubersblob.blob.core.windows.net/icons/ErrorPlaceholder.png"
            RetryCount="3"
            RetryDelay="600"
            Source="{Binding ImageUrl}"
            WidthRequest="90" />
        <Label
            Padding="20,0,20,0"
            FontAttributes="Bold"
            FontSize="20"
            HorizontalTextAlignment="Center"
            Text="Pago realizado" />
        <Label
            Padding="20,5,20,5"
            FontSize="Small"
            HorizontalTextAlignment="Center"
            Text="La transacción se ha realizado correctamente" />
        <Frame
            Margin="45,10,45,10"
            Padding="0,10,0,10"
            BackgroundColor="Black"
            CornerRadius="20">
            <StackLayout>
                <Label
                    Padding="0"
                    FontSize="Small"
                    HorizontalTextAlignment="Center"
                    Text="Clubers te ha reembolsado"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
                <Label
                    Padding="0"
                    FontAttributes="Bold"
                    FontSize="Small"
                    HorizontalTextAlignment="Center"
                    Text="{Binding Refund.Price, StringFormat='{0:C} MXN'}"
                    TextColor="White"
                    VerticalTextAlignment="Center" />
            </StackLayout>
        </Frame>

        <Button Command="{Binding ContinueCommand}" Text="Continuar" />
    </StackLayout>

</popups:PopupPage>