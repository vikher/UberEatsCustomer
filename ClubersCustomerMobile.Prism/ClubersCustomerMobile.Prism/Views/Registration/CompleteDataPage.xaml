                    <StackLayout Spacing="15">
                        <Label
                            Margin="0,0,0,5"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="Datos" />
                        <Frame Padding="0" CornerRadius="20">
                            <Entry
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                FontSize="Small"
                                HeightRequest="55"
                                Placeholder="Nombre"
                                PlaceholderColor="{StaticResource secondary_text}"
                                Text="{Binding User.FirstName}"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Frame Padding="0" CornerRadius="20">
                            <DatePicker
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                FontSize="Large"
                                HeightRequest="55"
                                TextColor="{StaticResource secondary_text}" />
                        </Frame>

                        <Frame Padding="0" CornerRadius="20">
                            <Entry
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                FontSize="Small"
                                HeightRequest="55"
                                Placeholder="Correo electrónico"
                                PlaceholderColor="{StaticResource secondary_text}"
                                Text="{Binding User.Email}"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Frame Padding="0" CornerRadius="20">
                            <Entry
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                FontSize="Small"
                                HeightRequest="55"
                                Placeholder="No. de INE"
                                PlaceholderColor="{StaticResource secondary_text}"
                                Text="{Binding User.Document}"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Label
                            Margin="0,5,0,5"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="Tarjeta de crédito" />
                        <Frame Padding="0" CornerRadius="20">
                            <Entry
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                FontSize="Small"
                                HeightRequest="55"
                                Placeholder="Tarjeta de crédito"
                                PlaceholderColor="{StaticResource secondary_text}"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Label
                            Margin="0,5,0,5"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="NIP de seguridad Clubers" />
                        <Frame Padding="0" CornerRadius="20">
                            <Entry
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                FontSize="Small"
                                HeightRequest="55"
                                Placeholder="NIP"
                                PlaceholderColor="{StaticResource secondary_text}"
                                Text="{Binding User.NIP}"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Frame Padding="0" CornerRadius="20">
                            <Entry
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                FontSize="Small"
                                HeightRequest="55"
                                Placeholder="Confirmar NIP"
                                PlaceholderColor="{StaticResource secondary_text}"
                                Text="{Binding User.NIP}"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <Label
                            Margin="0,5,0,5"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="Pregunta de Seguridad" />
                        <Frame Padding="0" CornerRadius="20">
                            <Picker
                                Title="Pregunta secreta"
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                HeightRequest="55"
                                ItemDisplayBinding="{Binding Question}"
                                ItemsSource="{Binding SecretQuestions}"
                                SelectedItem="{Binding SecretQuestion}"
                                TitleColor="{StaticResource secondary_text}" />
                        </Frame>
                        <Frame Padding="0" CornerRadius="20">
                            <Entry
                                BackgroundColor="{StaticResource background_page}"
                                FontAttributes="Italic"
                                FontSize="Small"
                                HeightRequest="55"
                                Placeholder="Respuesta secreta"
                                PlaceholderColor="{StaticResource secondary_text}"
                                Text="{Binding User.SecretAnswer}"
                                VerticalTextAlignment="Center" />
                        </Frame>
                        <!--<Label
                            FontSize="Medium"
                            HorizontalOptions="Center"
                            Text="Dar de alta tarjeta de crédito o débito"
                            TextDecorations="Underline" />-->

                        <Grid
                            Margin="0"
                            Padding="0"
                            ColumnDefinitions="Auto, *">
                            <CheckBox
                                Margin="0"
                                VerticalOptions="Center"
                                Color="{StaticResource cluberspink}" />
                            <StackLayout
                                Grid.Column="1"
                                Margin="0"
                                Padding="0"
                                Orientation="Horizontal">
                                <Label
                                    Margin="0"
                                    Padding="0"
                                    Text="He leído el "
                                    VerticalOptions="Center" />
                                <Label
                                    Margin="0"
                                    Padding="0"
                                    FontAttributes="Bold"
                                    Text="Aviso de privacidad"
                                    TextDecorations="Underline"
                                    VerticalOptions="Center" />
                            </StackLayout>
                        </Grid>
                        <Button Command="{Binding ContinueCommand}" Text="Guardar" />
                    </StackLayout>
                </StackLayout>
            </StackLayout>
        </ScrollView>
        <ActivityIndicator
            AbsoluteLayout.LayoutBounds=".5,.5,.5,.5"
            AbsoluteLayout.LayoutFlags="All"
            HorizontalOptions="Center"
            IsVisible="{Binding IsRunning}"
            VerticalOptions="Center"
            Color="Pink" />
    </AbsoluteLayout>
</ContentPage>